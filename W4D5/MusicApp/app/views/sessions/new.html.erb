<%#= render 'shared/enter' %>

<!-- need 2 forms for post request b/c action is in form -->
<form action="<%= users_url %>" method="post">
  <%= auth_token %>
  <%#= button_to "Join!", users_url, method: :post %>
  <input type="submit" value="Join!">
  <input type="text" name="user[email]" placeholder="email">
  <input type="password" name="user[password]" placeholder="password">
</form>

<form action="<%= session_url %>" method="post">
  <%= auth_token %>
  <input type="text" name="user[email]" placeholder="email">
  <input type="password" name="user[password]" placeholder="password">
  <input type="submit" value="ENTER">
  <%#= button_to "ENTER", session_url, method: :post %>
</form>

<% if flash[:errors] %>
  <% flash[:errors].each do |error_msg| %>
    * <%= error_msg %> <br>
  <% end %>
<% end %>

<!DOCTYPE html>
<html>
  <head>
    <title>MusicApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% if current_user %>
      <div style="display:flex; justify-content:space-between;margin-bottom:18px;">
        <!-- how come not working? b/c of <p>'s default margins -->
        <div style="display:flex;">
          <%= button_to "My Clients", user_url(current_user), method: :get %>
          &emsp;
          <%= button_to "All Bands", bands_url, method: :get %>
        </div>
        <div style="display:flex; justify-content:flex-end;">
          <div>User: <%= current_user.email %></div> &emsp;
          <div><%= button_to "Exit", session_url, method: :delete %></div>
        </div>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
